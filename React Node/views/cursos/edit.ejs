<h3>Editar Cursos</h3>
<form action="/cursos/edit" method="POST">
    <div class="form-group">
        <label for="nome">Cursos</label>
        <input type="text" name="nome" id="nome" class="form-control" required placeholder="<%= curso?.nome || '' %>">
    </div>
    
    <div class="form-group mt-2">
        <label for="descricao">Tempo de Duração</label>
        <input type="text" name="descricao" id="descricao" class="form-control" value="<%= curso?.descricao || '' %>">
    </div>
    <button type="submit" class="btn btn-success">Editar</button>
</form>