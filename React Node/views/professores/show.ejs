<h3>Lista de Professores</h3>
<a href="/professores/add" class="btn btn-primary mb-3">Adicionar</a>
<table class="table table-bordered table-striped table-sm">
    <thead>
        <tr>
            <th>Nome do professor(a)</th>
            <th>ID</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        <% if (professores.length === 0) { %>
            <tr>
                <td colspan="3" class="text-center">Nenhum professor cadastrado.</td>
            </tr>
        <% } else { %>
            <% professores.forEach(professor => { %>
                <tr>
                    <td><%= professor.nome %></td>
                    <td><%= professor.descricao %> </td>
                    <td class="text-end">
                        <a href="/professores/edit?id=<%= professor.id %>" class="me-2"><i class="bi bi-pencil-fill"></i></a>
                        <form action="/professores/delete" method="POST" style="display:inline;">
                            <input type="hidden" name="id" value="<%= professor.id %>">
                            <button type="submit" class="btn btn-link p-0 m-0" onclick="return confirm('Remover este professor?')"><i class="bi bi-trash-fill text-danger"></i></button>
                        </form>
                    </td>
                </tr>
            <% }) %>
        <% } %>
    </tbody>
</table>